<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeekFourUI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/parentBackground</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="card_view_linear_layout">
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingRight">19dp</item>
        <item name="android:paddingLeft">19dp</item>
        <item name="android:paddingTop">35dp</item>
        <item name="android:paddingBottom">39dp</item>

    </style>

    <style name="debit_card_text_view">
        <item name="android:textSize">14sp</item>
        <item name="color">@color/white</item>

    </style>

    <!--  To make the view lager when active  -->
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>
    <!--  To increase the size of the text  -->
    <style name="BottomNavigationViewActive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="viewPagerLayout">
        <item name="android:layout_height">159dp</item>
        <item name="android:layout_marginTop">70dp</item>
    </style>

    <style name="cardViewStyle">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="cardViewStyle2">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="recyclerStyle">
        <item name="android:paddingBottom">50dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>


    <style name="partners_style">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="amount_text_view">
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="credit_card_textView">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="credit_card_ll">
        <item name="android:layout_margin">16dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="credit_card">
        <item name="android:layout_marginVertical">16dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="credit_card_view">
        <item name="android:layout_marginVertical">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_width">155dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="credit_card_view1">
        <item name="android:layout_marginVertical">16dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_width">155dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="dollar_text_view">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="cash_loan_ll">
        <item name="android:layout_marginVertical">16dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="special_offer_text_view">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">23dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
</resources>